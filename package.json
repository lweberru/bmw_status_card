  "dependencies": {
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "rollup": "^4.52.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
