{
  "name": "bmw-status-card",
  "version": "0.1.24",
  "description": "BMW Status Card for Home Assistant (auto-config using bmw_home + bmw-cardata-ha)",
  "type": "module",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "start": "rollup -c rollup.config.js --watch",
    "sync-version": "node scripts/sync-version.cjs",
